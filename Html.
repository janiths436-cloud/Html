<body>
  <div class="container">
    <h1>Mini Bot QR Pair</h1>
    <div id="qrCode"></div>
    <button onclick="generateQRCode()">Generate QR Code</button>
    <div class="status" id="status">Scan QR code with your Mini Bot app</div>
  </div>

  <script>
    // Fake pairing backend simulation
    const validBotKeys = ["MINI123", "BOT456", "JANITH789"];

    function generateQRCode() {
      const status = document.getElementById('status');
      status.textContent = "ðŸ”„ Generating QR code...";
      status.style.color = "#333";

      // Generate a random key from valid keys
      const botKey = validBotKeys[Math.floor(Math.random() * validBotKeys.length)];

      // Clear previous QR code
      document.getElementById("qrCode").innerHTML = "";

      // Generate QR code
      new QRCode(document.getElementById("qrCode"), {
        text: botKey,
        width: 200,
        height: 200
      });

      // Simulate bot pairing
      setTimeout(() => {
        status.textContent = `âœ… Bot paired successfully with key: ${botKey}`;
        status.style.color = "green";
      }, 2000);
    }
  </script>
</body>
