  <h1>JANI MD - Pair Device</h1>

  <div class="box">
    <input id="number" placeholder="Enter WhatsApp Number" />
    <button onclick="pair()">Get Pair Code</button>

    <div id="qr"></div>
  </div>

<script>
async function pair(){
  let num = document.getElementById("number").value;
  if(!num) return alert("Enter number");

  document.getElementById("qr").innerHTML="Generating...";

  let res = await fetch("/pair?number="+num);
  let data = await res.json();

  document.getElementById("qr").innerHTML =
    `<img src="${data.qr}" />`;
}
</script>

